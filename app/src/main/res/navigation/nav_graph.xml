<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.collegeapp.features.auth.presentation.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.collegeapp.features.auth.presentation.ui.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.collegeapp.features.weather.presentation.ui.WeatherFragment"
        android:label="Weather"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/action_weatherFragment_to_detailWeatherFragment"
            app:destination="@id/detailWeatherFragment" />
        <argument
            android:name="cityName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="Moscow" />
    </fragment>
    <fragment
        android:id="@+id/calculatorFragment"
        android:name="com.example.collegeapp.features.calculator.presentation.ui.CalculatorFragment"
        android:label="Calculator"
        tools:layout="@layout/fragment_calculator" />
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.collegeapp.features.list.presentation.ui.ListFragment"
        android:label="List"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailWeatherFragment"
        android:name="com.example.collegeapp.features.weather.presentation.ui.DetailWeatherFragment"
        android:label="DetailWeatherFragment"
        tools:layout="@layout/fragment_detail_weather">
        <argument
            android:name="forecast"
            app:argType="com.example.collegeapp.features.weather.domain.model.ForecastItem" />
    </fragment>
</navigation>
